generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model WorkshopPayment{
  id  String @id @default(uuid())
  userId String @default("N/A")
  fullName String
  email String
  phoneNumber String
  workshopId String
  paymentStatus String @default("pending") 
  paymentRequestId String @default("N/A")
  paymentId String @default("N/A")
  longurl String @default("N/A")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt            
}

model Workshop{
  id String @id @default(uuid())
  title String
  desc String
  tag String
  topics String[]
  mentor String
  time DateTime
  thumbnail String @default("NA")

}
